<!--app/views/static_pages/edit.html.erb-->
<% if @page.present? %>
  <%= form_for [@page.becomes(StaticPage)], url: resource_url, as: resource_name, html: { method: :put, multipart: true } do |f| %>
    <%= f.error_notification %>
    <% f.inputs %>
    <%= f.actions %>
  <% end %>
<% else %>
  <p>Page not found</p>
<% end %>