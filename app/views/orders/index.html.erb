<h1>My Orders</h1>

<% @orders.each do |order| %>
  <div class="order-summary">
    <h2>Order ID: <%= order.id %></h2>
    <p>Status: <%= order.order_status.capitalize %></p>
    <h3>Order Items:</h3>
    <ul>
      <% order.order_items.each do |item| %>
        <li><%= item.product.product_name %>: <%= item.quantity %> x <%= number_to_currency(item.payment_amount) %> = <%= number_to_currency(item.quantity * item.payment_amount) %></li>
      <% end %>
    </ul>

    <p>Products Total Price: <%= number_to_currency(order.items_total_price) %></p>
    <p>Total Tax: <%= number_to_currency(order.calculate_total_tax) %></p>
    <p>Grand Total: <%= number_to_currency(order.total_price) %></p>
    <p>Order Date: <%= order.created_at.strftime("%Y-%m-%d") %></p>
    <% if order.status_new? %>
      <%= button_to 'Cancel Order', cancel_order_path(order), method: :patch %>
      <%= link_to 'Pay', new_order_payment_path(order), method: :get %>
    <% end %>
  </div>
<% end %>
