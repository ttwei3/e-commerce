<section class="section">
  <div class="container">
    <h1 class="title">All Products</h1>
    <div class="columns is-multiline">
      <% @products.each do |product| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
              <% if product.image.attached? %>
                <%= image_tag(product.image, class: "card-img-top") %>
              <% end %>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="subtitle is-6"><strong>Product Name:</strong> <%= product.product_name %></p>
                  <p class="subtitle is-6"><strong>Price:</strong> <%= product.price %></p>
                  <p class="subtitle is-6"><strong>Description:</strong> <%= product.description %></p>
                  <p class="subtitle is-6"><strong>Stock Quantity:</strong> <%= product.stock_quantity %></p>
                  <p class="subtitle is-6"><strong>Category:</strong> <%= product.category.category_name if product.category %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
