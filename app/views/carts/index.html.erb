<h2>Your Shopping Cart</h2>

<% if @cart_items.empty? %>
  <p>Your shopping cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <% product = Product.find(item.product_id) %>
        <tr>
          <td><%= link_to product.product_name, product_path(product) %></td>
          <td>
          <%= form_with(url: update_item_carts_path, method: :patch, local: true) do |form| %>
            <%= form.number_field :quantity, value: item.quantity, in: 1..5000 %>
            <%= form.hidden_field :product_id, value: item.product_id %>
            <%= form.submit "Update" %>
          <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * item.quantity) %></td>
          <td>
            <%= button_to 'Remove', remove_item_carts_path(product_id: item.product_id), method: :delete, data: { turbo: false } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>Subtotal: <%= number_to_currency(@cart.subtotal_price) %></p>
  <button class=“button”>Checkout</button>
<% end %>